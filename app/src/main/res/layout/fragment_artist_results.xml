<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@android:color/transparent"
             tools:context="com.rowenetworks.concearch.fragments.ArtistResultsFragment">

    <CheckBox
        android:id="@+id/artist_results_checkBox"
        android:text="@string/artist_results_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/artist_results_imageView"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/powered_by_songkick"
        android:layout_alignEnd="@+id/artist_results_checkBox"
        android:layout_alignParentEnd="true"
        android:layout_width="75dp"
        android:layout_height="50dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/artist_results_recyclerView"
        android:paddingTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_below="@+id/artist_results_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
