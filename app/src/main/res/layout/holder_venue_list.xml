<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/recyclecustomborder_1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/venue_results_imageView"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/powered_by_songkick"
        android:layout_alignParentEnd="true"
        android:paddingStart="0dp"
        android:paddingEnd="20dp"
        android:layout_width="75dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/venue_results_name_textView"
        android:layout_below="@+id/venue_results_imageView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/venue_results_location_textView"
        android:layout_below="@+id/venue_results_name_textView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/venue_results_phone_textView"
        android:layout_below="@+id/venue_results_location_textView"
        android:layout_alignParentStart="true"
        android:textColorLink="@color/hyperlink_blue"
        android:autoLink="phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/venue_results_website_textView"
        android:layout_below="@+id/venue_results_location_textView"
        android:textColorLink="@color/hyperlink_blue"
        android:autoLink="web"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/venue_results_button"
        android:text="@string/show_details"
        android:layout_below="@+id/venue_results_phone_textView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/venue_results_id_textView"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

</RelativeLayout>