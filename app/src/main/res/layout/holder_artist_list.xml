<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/artist_list_name_textView"
        android:background="@drawable/recyclecustomborder"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="75dp"/>

    <TextView
        android:id="@+id/artist_list_onTour_textView"
        android:layout_toEndOf="@+id/artist_list_name_textView"
        android:background="@drawable/on_tour_custom_background"
        android:gravity="center"
        android:text="@string/onTour"
        android:textSize="25sp"
        android:layout_width="125dp"
        android:layout_height="75dp"/>

    <TextView
        android:id="@+id/artist_id_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</RelativeLayout>